{
  "name": "@algoan/nestjs-bridge-connector",
  "version": "0.0.1",
  "description": "Bridge connector for Algoan",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "node-config-ts",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "semantic-release": "semantic-release",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "test": "USER=test jest",
    "test:watch": "npm t -- --watch",
    "test:cov": "npm t -- --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm t -- --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@algoan/nestjs-http-exception-filter": "^1.0.8",
    "@algoan/nestjs-logging-interceptor": "^2.1.6",
    "@algoan/rest": "^1.20.0",
    "@nestjs/common": "^7.5.5",
    "@nestjs/core": "^7.5.5",
    "@nestjs/platform-express": "^7.5.5",
    "axios": "^0.20.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "delay": "^4.4.0",
    "hbs": "^4.1.1",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.32",
    "nest-winston": "^1.4.0",
    "node-config-ts": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@algoan/eslint-config": "^1.1.1",
    "@commitlint/config-conventional": "^11.0.0",
    "@nestjs/cli": "^7.5.3",
    "@nestjs/schematics": "^7.2.2",
    "@nestjs/testing": "^7.5.5",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/express": "^4.17.9",
    "@types/jest": "26.0.15",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.9",
    "@types/supertest": "^2.0.8",
    "commitlint": "^11.0.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint-plugin-nestjs": "^1.2.3",
    "husky": "^4.2.5",
    "jest": "26.6.3",
    "lint-staged": "^10.5.1",
    "nock": "^13.0.5",
    "prettier": "^2.2.0",
    "semantic-release": "^17.3.0",
    "semantic-release-docker": "^2.2.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2",
    "uuid": "^8.3.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{src,apps,libs}/**/*.ts": [
      "npm run lint"
    ],
    "{src,test}/**/*.ts": [
      "prettier --list-different \"{src,test}/**/*.ts\""
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
